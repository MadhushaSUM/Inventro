<UserControl x:Class="Inventro.View.UserControls.ProductItems.WeighingTurn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inventro.View.UserControls.ProductItems"
             xmlns:userControl="clr-namespace:Inventro.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="800">
    <StackPanel
        Orientation="Horizontal"
        HorizontalAlignment="Center">
        <Label
            Style="{StaticResource DawaseMilaText}">බර
        </Label>
        <userControl:WeightSetter 
            x:Name="turnWeight"/>
        <Button
            Style="{StaticResource closeBtnStyles}"
            Height="30"
            Width="30"
            Name="btnRemove"
            Click="btnRemove_Click">X</Button>
    </StackPanel>
</UserControl>
