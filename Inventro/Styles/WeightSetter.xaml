                            <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource WeightMinusButton.Disabled.Foreground}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>